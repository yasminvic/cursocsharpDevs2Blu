@model List<Devs2Blu.ProjetosAula.CSharpMVCRevisao.Models.DTOAPI.CardDTO> //pra resgatar o card
<!--Model maiusculo está se referindo a class, e o minusculo (model) está fazendo um include-->

<div class="row" id="content-list">
    @foreach (var item in Model)
    {
            <div class="card mx-auto my-auto" style="width: 15rem;">
            <div class="card-header">
                <img src="@item.Card_Images[0].Image_Url" class="card-img-top">
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group d-flex justify-content-between">
                        <span class="badge bg-black text-white col-1">@item.Id</span>
                        <span>@item.Name</span>
                    </li>
                </ul>
            </div>
        </div>
    }
</div>

