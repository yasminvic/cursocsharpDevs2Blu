@model List<Devs2Blu.CopaMundo.Models.Copa.Group>


@foreach (var item in Model)
{
            <div class="card mx-auto mb-3" style="width: 15rem;">
                <div class="card-header bg-dark text-white">
                <h3 class="text-center">@item.Name</h3>
                
            </div>
            <div class="card-body">
                <ul class="list-group text-center">
                    <li class="list-group d-flex justify-content-between">
                        <h4>@item.Teams[0]</h4> 
                   </li>
                    <li class="list-group d-flex justify-content-between">
                        <h4>@item.Teams[1]</h4> 
                    </li>
                    <li class="list-group d-flex justify-content-between">
                        <h4>@item.Teams[2]</h4> 
                    </li>
                    <li class="list-group d-flex justify-content-between">
                        <h4>@item.Teams[3]</h4> 
                    </li>
                        
                </ul>
            </div>
        </div>
}
