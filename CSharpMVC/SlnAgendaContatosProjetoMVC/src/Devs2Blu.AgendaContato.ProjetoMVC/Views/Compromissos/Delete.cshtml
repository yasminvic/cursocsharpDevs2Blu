@model Devs2Blu.AgendaContato.ProjetoMVC.Models.DTO.ContatoViewModel

@{
    Layout = null;
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Deseja Realmente excluir esse Contato?</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div id="content">
                <h4>Contato</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.nome)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.telefone)
                    </dd>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.email)
                    </dd>
                </dl>
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button id="btnDelete" type="button" class="btn btn-danger">Delete</button>
        </div>
    </div>
</div>

<script>
    $(document).ready(() =>{
        $('#btnDelete').click(() => executeDelete());
    });

    const executeDelete = () =>{
        $.ajax({
            url: `@Url.Action("Delete")`,
            method: 'POST',
            data: {
               id: @Model.id,
               nome: '@Model.nome',
               telefone: '@Model.telefone',
               email: '@Model.email'
            },
            success: (response) =>{
                if(response === 'OK'){
                    let htmlMsg = `    <div class="alert alert-success" id="alertMsg" style="display: none;">
                                                <h2>Registro Apagado com Sucesso!</h2>
                                        </div>`
                    $('#content').html(htmlMsg);
                    $('#modal').modal('toggle');
                    window.location.reload();
                }
            }
        });
    };
</script>
